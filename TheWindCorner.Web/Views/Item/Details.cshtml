@using TheWindCorner.Data.Models.Entities
@using TheWindCorner.Data.Models.Enums
@model Item

@{
    ViewData["Title"] = "Item Details";
}

<h2>Item Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Item Type</dt>
            <dd class="col-sm-9">@Model.ItemType</dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">@(Model.Size ?? "-") </dd>

            <dt class="col-sm-3">Brand</dt>
            <dd class="col-sm-9">@(Model.Brand ?? "-") </dd>

            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Year</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>